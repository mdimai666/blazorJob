@page "/post/{Id:guid}"
@inject PostService postService



@if(@post != null){
    <h1>@post.Title</h1>

    <p>@post.Content</p>
} else {
    <div>
        Empty
    </div>
}



@code {
    async protected override Task OnInitializedAsync()
    {
        if(Id != null){
            post = await postService.Get(Id.Value);
        }

    }

    [Parameter]
    public Guid? Id { get; set; }
    public Post post {get;set;} = null;
}