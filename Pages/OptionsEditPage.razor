@page "/editoption"
@page "/editoption/{Id:long}"

@using BlazorJob.Data
@using System
@using System.Collections.Generic
@using System.Linq

@if(isNew){
    <h1>Add option</h1>
} else{
    <h1>Edit option</h1>
}


<OptionEdit id="@Id" />

@code {
    [Parameter]
    public long? Id { get; set; }

    bool isNew => Id == null;
}